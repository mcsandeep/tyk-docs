{
  "plugins": [
    "prettier-plugin-go-template"
  ],
  "goTemplateBracketSpacing": true,
  "printWidth": 120,
  "proseWrap": "always",
  "tabWidth": 2,
  "overrides": [
    {
      "files": [
        "*.html"
      ],
      "options": {
        "parser": "go-template",
        "goTemplateBracketSpacing": true,
        "bracketSameLine": true
      }
    },
    {
      "files": [
        "*.js",
        "*.ts"
      ],
      "options": {
        "useTabs": true,
        "printWidth": 120,
        "singleQuote": false
      }
    }
  ]
}